{
  "name": "codeoptimizer",
  "displayName": "codeoptimizer",
  "publisher": "codeoptimizer",
  "description": "Your code optimizer tool.",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:codeoptimizer.optimize"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "codeoptimizer",
      "properties": {                          
        "codeoptimizer.views.apiKey": {
          "type": "string",
          "default": "",
          "description": "Add Open AI API key."
        }
      }
    },
    "commands": [
      {
        "command": "codeoptimizer.optimize",
        "title": "Code Optimizer: Optimize"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codeoptimizer.optimize",
          "when": "editorHasSelection",
          "group": "1_modication"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.2.1",
    "openai": "^3.1.0"
  }
}
